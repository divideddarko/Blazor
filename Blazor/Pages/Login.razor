@layout Shared.PreLogin.PreLoginLayout
@page "/login"
@using Twitch_Tools.Models

	<div class="col rounded bg-info py-5">
		<form>
			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" class="form-control" id="emailAddressInput" placeholder="Email Address">
			</div>

			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" class="form-control" id="passwordInput">
			</div>

			<div class="text-right">
				<button type="submit" class="btn btn-primary col-4">Login</button>
			</div>

			<div class="mt-3">
				<p>If you don't already have an account <a href="Register" type="button">Register</a></p>
			</div>
		</form>

	</div>

	<div class="col-5">
      	Sign In
    </div>


@{


}