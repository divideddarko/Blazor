@layout Shared.PreLogin.PreLoginLayout
@page "/login"
@using Twitch_Tools.Models

	<div class="col rounded bg-info py-5">
		<EditForm Model="@newLogin" OnValidSubmit="@LoginUser">
			<DataAnnotationsValidator />
			<ValidationSummary />

			<div class="form-group">
				<label for="email">Email</label>
				<InputText id="emailAddress" type="email" class="form-control" placeholder="Email Address" @bind-Value="login.EmailAddress" />
			</div>

			<div class="form-group">
				<label for="password">Password</label>
				<InputText id="password" type="password" class="form-control" @bind-Value="@login.Password" />
			</div>

			<div class="text-right">
				<button type="submit" class="btn btn-primary col-4">Login</button>
			</div>

			<div class="mt-3">
				<p>If you don't already have an account <a href="Register" type="button">Register</a></p>
			</div>

		</EditForm>


	</div>

	<div class="col-5">
      	Sign In
    </div>


