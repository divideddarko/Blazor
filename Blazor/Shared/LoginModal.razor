@inherits LayoutComponentBase
@inject IModalService Modal

<form>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="emailAddressInput" placeholder="Email Address">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="passwordInput">
    </div>
    <button @onclick="RegisterModal" class="btn btn-primary">Register</button>
    <button type="submit" class="btn btn-primary">Login</button>

</form>



@Body

@code{
    void RegisterModal() => Modal.Show<RegisterModal>("Register");
}